<!-- Begin image and caption -->  
<td>
	<table border="0" cellpadding="0" cellspacing="1">
	<tr><td><a href="/var/knowledge/storage/images/media/images/nano_fig4/211254-1-eng-GB/nano_fig4.jpg" rel="lightbox[]" >	<img border="0" src="/var/knowledge/storage/images/media/images/nano_fig4/211254-1-eng-GB/nano_fig4_medium.jpg" width="200" height="58">
	  </a></td>
	<tr>
	
	</tr>
	</table>
  	
